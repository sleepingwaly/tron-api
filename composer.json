{
    "name": "sleepw/tron-api",
    "description": "A PHP API for interacting with Tron (Trx),forked from iexbase/tron-api",
    "license": "MIT",
    "type":   "library",
    "homepage": "https://github.com/iexbase/tron-api",
    "authors": [
        {
            "name": "Shamsudin Serderov",
            "email": "steein.shamsudin@gmail.com"
        }
    ],
    "keywords": [
        "iexbase",
        "tron-lib",
        "tron-php",
        "tron-api",
        "tron-rest-api"
    ],

    "require": {
        "php": "^7.2|^7.4|^8.0",
        "comely-io/data-types": "^1.0",
        "guzzlehttp/guzzle": "^7.0",
        "web3p/web3.php": "*",
        "kornrunner/secp256k1": "^0.1.2",
        "simplito/elliptic-php": "^1.0",
        "ext-json": "*",
        "ext-bcmath": "*"
    },

    "require-dev": {
        "phpunit/phpunit": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "IEXBase\\TronAPI\\": "src"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "IEXBase\\TronAPI\\Test\\": "tests"
        }
    },

    "config": {
        "sort-packages": true
    },

    "minimum-stability": "dev",
    "prefer-stable": true
}
